    <h1>PCG Dungeon Generator</h1>
    <p>Click the button to generate a random dungeon.</p>

    <button onclick="generateDungeon()">Generate Dungeon</button>

    <div id="dungeon" class="dungeon"></div>

    <script>
        const width = 10;
        const height = 10;

        function generateDungeon() {
            const dungeon = document.getElementById("dungeon");
            dungeon.innerHTML = "";

            for (let i = 0; i < width * height; i++) {
                const cell = document.createElement("div");
                cell.classList.add("cell");

                // Randomly decide wall or floor
                if (Math.random() > 0.4) {
                    cell.classList.add("floor");
                } else {
                    cell.classList.add("wall");
                }

                dungeon.appendChild(cell);
            }
        }
    </script>

